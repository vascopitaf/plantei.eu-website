<h2>{{lang 'seedbank::menu.forum' }}</h2>
  <table class="table" id="forum">
    <tbody>
      {{#each posts}}
      <tr data-forum_id="{{id}}">
        <td>{{thread.title}}</td>
        <td>{{author.name}}</td>
        <td>{{updated_at}}</td>
      </tr>
      {{else}}
      <tr>
        <h4>{{lang 'seedbank::messages.noContent' }}</h4>
      </tr>
      {{/each}}
    </tbody>
  </table>
